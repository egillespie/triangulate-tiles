{
  "name": "triangulate-tiles",
  "version": "1.0.0",
  "description": "Generates tile assets for the game Triangulate for upload to The Game Crafter",
  "author": "Erik Gillespie <erik.gillespie@gmail.com>",
  "license": "MIT",
  "config": {
    "size": 450,
    "quantities": {
      "1": 1,
      "2": 1,
      "3": 1,
      "4": 1
    },
    "colors": [
      {
        "name": "yellow",
        "hex": "F0F032"
      },
      {
        "name": "green",
        "hex": "0AB45A"
      },
      {
        "name": "red",
        "hex": "AA093C"
      },
      {
        "name": "blue",
        "hex": "005AC8"
      },
      {
        "name": "pink",
        "hex": "FA78FA"
      },
      {
        "name": "white",
        "hex": "FFFFFF"
      }
    ]
  },
  "scripts": {
    "clean": "rimraf dist && mkdir dist && mkdir dist/svg",
    "lint": "eslint src/**/*.js",
    "gen": "run-s lint clean start",
    "start": "node src/index",
    "launch": "live-server",
    "serve": "run-s gen launch"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "jsdom": "^15.0.0",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "raphael": "^2.2.8",
    "rimraf": "^2.6.3",
    "svg-to-png": "^4.0.0"
  }
}
